<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white">
    <div class="w-full h-full p-10">
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(allUsers.length > 0) { %>
                <% allUsers.forEach( function(user) { %> 
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-72 rounded-lg bg-zinc-500">
                    <img class="w-full h-full rounded-lg bg-zinc-700 object-cover object-top overflow-hidden" src="<%= user.image %>" >
                </div>
                <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex gap-3 mt-10">
                    <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                    <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                </div>
            </div>
            <% }) %>
            <%  } else { %>
                <h1 class="text-3xl tracking-tighter mb-3">No User</h1>
            <% } %>
            
        </div>
        <div class="nav mt-10 ml-3">
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>
    </div>
</body>
</html>
